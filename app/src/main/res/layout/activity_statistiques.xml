<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Statistiques">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_texte_nb_annonce_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre d'annonce"/>
            <TextView
                android:id="@+id/text_view_nb_annonce_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_texte_max_vu_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max vu"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_view_max_vu_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_texte_total_vu_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total vu"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_view_total_vu_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/layout_stat_by_annonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stats par annonce:"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/ll_titre_colonne_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_nom_annonce_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom annonce"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/text_view_nb_vu_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre vu"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/text_view_nb_fav_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre fav"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>