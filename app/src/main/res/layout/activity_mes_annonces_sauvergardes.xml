<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Mes_annonces_sauvergardes">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <TextView
            android:id="@+id/text_view_mes_annonces_sauvergardes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="MES ANNONCES SAUVEGARDEES"
            android:gravity="center_horizontal" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_vente_mes_annonces_sauvegardes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Ventes"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_location_mes_annonces_sauvegardes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Locations" />

        <LinearLayout
            android:id="@+id/dynamique_linear_layout_mes_annonces_sauvegardes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>

</ScrollView>