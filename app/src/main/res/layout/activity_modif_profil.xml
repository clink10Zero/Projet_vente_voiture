<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ModifProfil">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_nom_modif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom" />
            <EditText
                android:id="@+id/edit_text_nom_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_prenom_modif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrÃ©nom" />
            <EditText
                android:id="@+id/edit_text_prenom_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_email_modif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"/>
            <EditText
                android:id="@+id/edit_text_email_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_mot_de_passe_modif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe"/>
            <EditText
                android:id="@+id/edit_text_mot_de_passe_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_confirmation_mot_de_passe_modif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmation mot de passe"/>
            <EditText
                android:id="@+id/edit_text_confirmation_mot_de_passe_modif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </LinearLayout>
        <Button
            android:id="@+id/button_validation_modif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validation" />
    </LinearLayout>

</ScrollView>